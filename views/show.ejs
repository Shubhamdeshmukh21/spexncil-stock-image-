<%- include('./partials/header.ejs') %>

<div class="w-full min-h-screen bg-zinc-800 text-white py-20">
  <!-- Masonry Grid -->
  <div class="columns-1 sm:columns-2 md:columns-3 lg:columns-4 xl:columns-5 px-4 space-y-4">
    <% user.posts.forEach(function(elem){ %>
      <a href="/post/<%= elem._id %>" class="block break-inside-avoid rounded-xl overflow-hidden shadow-lg bg-zinc-900 transition-transform hover:scale-105 duration-200">
        <img src="/images/uploads/<%= elem.image %>" class="w-full object-cover" alt="">
        <div class="p-3">
          <h5 class="text-sm font-semibold"><%= elem.title %></h5>
        </div>
      </a>
    <% }) %>
  </div>
</div>

<%- include('./partials/footer.ejs') %>