<%- include('./partials/header.ejs') %>

<div class="w-full min-h-screen bg-cover bg-center bg-zinc-600 bg-[url('https://i.pinimg.com/1200x/be/69/0c/be690cec0b1150e44794193662f5a68c.jpg')] flex items-center justify-center px-4 py-10">
  <div class="w-full max-w-sm bg-zinc-900 px-6 py-8 rounded-3xl shadow-lg">
    <h1 class="text-3xl text-center text-white font-semibold mb-4">Welcome to Spexncil.</h1>

    <!-- ðŸ”” Flash Alerts -->
    <% if (error && error.length > 0) { %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4 text-sm">
        <strong class="font-bold">Error:</strong>
        <span class="block sm:inline"><%= error %></span>
      </div>
    <% } %>
    <% if (success && success.length > 0) { %>
      <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-4 text-sm">
        <strong class="font-bold">Success:</strong>
        <span class="block sm:inline"><%= success %></span>
      </div>
    <% } %>

    <form action="/login" method="post" class="space-y-3">
      <input
        type="text"
        name="username"
        placeholder="Username"
        class="w-full px-3 py-2 bg-zinc-200 text-black rounded-md focus:outline-none focus:ring-2 focus:ring-red-400"
      />

      <input
        type="password"
        name="password"
        placeholder="Password"
        class="w-full px-3 py-2 bg-zinc-200 text-black rounded-md focus:outline-none focus:ring-2 focus:ring-red-400"
      />

      <input
        type="submit"
        value="Login"
        class="w-full px-3 py-2 bg-red-500 text-white font-semibold rounded-full hover:bg-red-600 transition"
      />

      <p class="text-xs text-center text-zinc-400 font-medium mt-2">
        By continuing, you agree to Spexncil's Terms of Service and acknowledge you've read our Privacy Policy.
      </p>

      <a
        href="/register"
        class="block text-center text-sm text-zinc-200 font-semibold hover:underline mt-3"
      >
        Donâ€™t have an account?
      </a>
    </form>
  </div>
</div>

<%- include('./partials/footer.ejs') %>
