<%- include('./partials/header.ejs') %>

<div class="w-full min-h-screen bg-cover bg-center bg-zinc-300 bg-[url('https://i.pinimg.com/1200x/3e/7a/85/3e7a854b97b38fd4fd0b6bc26c31882c.jpg')] flex items-center justify-center px-4 py-10">
  <div class="w-full max-w-sm bg-zinc-900 px-6 py-8 rounded-3xl shadow-lg">
    <h1 class="text-3xl text-center text-white font-semibold mb-4">Create New Account</h1>

    <form action="/register" method="POST" class="space-y-3">
      <input
        type="text"
        name="username"
        placeholder="Username"
        class="w-full px-3 py-2 bg-zinc-200 text-black rounded-md focus:outline-none focus:ring-2 focus:ring-red-400"
      />
      <input
        type="text"
        name="fullname"
        placeholder="Full Name"
        class="w-full px-3 py-2 bg-zinc-200 text-black rounded-md focus:outline-none focus:ring-2 focus:ring-red-400"
      />
      <input
        type="email"
        name="email"
        placeholder="Email"
        class="w-full px-3 py-2 bg-zinc-200 text-black rounded-md focus:outline-none focus:ring-2 focus:ring-red-400"
      />
      <input
        type="number"
        name="contact"
        placeholder="Contact"
        class="w-full px-3 py-2 bg-zinc-200 text-black rounded-md focus:outline-none focus:ring-2 focus:ring-red-400"
      />
      <input
        type="password"
        name="password"
        placeholder="Password"
        class="w-full px-3 py-2 bg-zinc-200 text-black rounded-md focus:outline-none focus:ring-2 focus:ring-red-400"
      />
      <input
        type="submit"
        value="Create New Account"
        class="w-full px-3 py-2 bg-red-500 text-white font-semibold rounded-full hover:bg-red-600 transition"
      />

      <p class="text-xs text-center text-zinc-400 font-medium">
        By continuing, you agree to Spexncil's Terms of Service and acknowledge you've read our Privacy Policy.
      </p>

      <a
        href="/"
        class="block text-center text-sm text-zinc-200 font-semibold hover:underline mt-3"
      >
        Login to existing account?
      </a>
    </form>
  </div>
</div>

<%- include('./partials/footer.ejs') %>
